<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context="com.example.slidebox.ui.recyclables.RecyclablesActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:srcCompat="@drawable/coffee" />

    <Button
        android:id="@+id/buttonPaper"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paper"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:onClick="paperPopup"/>

    <Button
    android:id="@+id/buttonMetal"
    style="@style/Widget.AppCompat.Button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Metal"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    android:onClick="metalPopup"/>

    <Button
    android:id="@+id/buttonPlastic"
    style="@style/Widget.AppCompat.Button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Plastic"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:onClick="plasticPopup"/>

    <Button
    android:id="@+id/buttonGlass"
    style="@style/Widget.AppCompat.Button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Glass"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    android:onClick="glassPopup"/>

    <Button
        android:id="@+id/buttonUnsure"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unsure?"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:onClick="unsurePopup"/>
</LinearLayout>

