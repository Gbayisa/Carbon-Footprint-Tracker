<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/relativeLayout_1"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:orientation="vertical"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/logo_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="480dp"
            android:layout_gravity="center"
            android:src="@drawable/sage" />

        <TextView
            android:id="@+id/quoteText"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="#00000f"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/eco"
            android:gravity="center_vertical"
            tools:ignore="PrivateResource,RtlCompat"/>
        <TextView
            android:id="@+id/quoteAuthor"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="#00000f"
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_marginRight="20dp"
            android:gravity="bottom|right"
            tools:ignore="PrivateResource,RtlCompat" />


        <TextView
            android:id="@+id/points_lable"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/quoteText"
            android:gravity="center"
            android:layout_centerHorizontal="true"

            android:text="Your Points"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/challange_lable"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/points_lable"
            android:layout_marginTop="120dp"
            android:paddingLeft="20dp"
            android:text="Daily chanllage:"
            android:textSize="20dp" />
        <CheckedTextView
            android:id="@+id/chanllage_1"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="chanllage 1"
            android:layout_below="@+id/challange_lable"
            android:paddingLeft="20dp"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_below="@+id/challange_lable"
            android:layout_toRightOf="@+id/chanllage_1"
            android:scaleX="0.5"
            android:scaleY="0.5" />

        <CheckedTextView
            android:id="@+id/chanllage_2"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="chanllage 2"
            android:layout_below="@+id/chanllage_1"
            android:paddingLeft="20dp"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_below="@+id/chanllage_1"
            android:layout_toRightOf="@+id/chanllage_2"
            android:scaleX="0.5"
            android:scaleY="0.5" />

        <Button
            android:id="@+id/sign_out"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sign out"
            android:textSize="25dp"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>
</ScrollView>

